
  {{> header}}

  <body class="list-page">
     <div class="alert alert-success">
       <IMG SRC="images/logo.png" ALIGN="right"/>
         <a href="/entries"><h1>Telefonbuch</h1></a>
       </div>
       <div>
         <form method="POST" action="/entries">
         <a float="left" href="/pdf" class="btn btn-success">PDF-Speichern</a>
         <!-- <form><input type=button name=print value="PrintPage" class="btn btn-secondary" onClick="window.print()"></form> -->
        <a  float="left" href="/entrie/add" class="btn btn-info">Neuer Eintrag</a>


        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search" name="searchString"{{#search}}value="{{search}}"{{/search}}/>
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div>


    </form>
    </div>


    <table class="table table-striped">
  <!--       <td class="alert alert-info">Entrie-ID</td> -->
      <td class="alert alert-info">Titel</td>
      <td class="alert alert-info">Vorname</td>
      <td class="alert alert-info">Nachname</td>
      <td class="alert alert-info">Tel.</td>
      <td class="alert alert-info">Tel. Mobil</td>
      <td class="alert alert-info">Mail</td>
      <td class="alert alert-info">Firma</td>
      <td class="alert alert-info">Abteilung</td>
      <td class="alert alert-info">bearbeiten</td>
      <td class="alert alert-info">l&ouml;schen</td>
    {{#entries}}
      <tr>
      <!--       <td>{{entrie_id}}</td> -->
          <td>{{title}}</td>
          <td>{{name}}</td>
          <td>{{surname}}</td>
          <td>{{tel}}</td>
          <td>{{mtel}}</td>
          <td><a href="mailto:{{mail}}">{{mail}}</a></td>
          <td>{{company}}</td>
          <td>{{department}}</td>



          <td><a href="/entries/edit/{{entrie_id}}"  class="btn btn-primary" >edit</a></td>
          <td>
              <form method="POST" action="/entrie/delete/{{entrie_id}}">
                <button type="submit" class="btn btn-primary">delete</button>
              </form>
          </td>
      </tr>
    {{/entries}}
  </table>





  </body>

